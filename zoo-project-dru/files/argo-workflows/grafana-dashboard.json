{
  "id": null,
  "title": "Argo Workflows - ZOO-Project DRU",
  "tags": ["argo", "workflows", "kubernetes", "zoo-project"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "5s",
  "time": {
    "from": "now-5m",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["1s", "5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"],
    "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
  },
  "panels": [
    {
      "id": 1,
      "title": "Total Workflows",
      "type": "stat",
      "targets": [
        {
          "expr": "sum by (status) (argo_workflows_gauge{namespace=\"{{ .Release.Namespace }}\"})",
          "legendFormat": "{{`{{status}}`}}",
          "interval": "5s",
          "maxDataPoints": 100
        }
      ],
      "interval": "5s",
      "maxDataPoints": 100,
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "displayMode": "list",
            "orientation": "auto"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Succeeded"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "green"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName", 
              "options": "Failed"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Error"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "dark-red"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Running"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "yellow"
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": 2,
      "title": "Controller Errors",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(argo_workflows_error_count{namespace=\"{{ .Release.Namespace }}\"})",
          "legendFormat": "Total Errors",
          "interval": "5s",
          "maxDataPoints": 100
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Pods Managed",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(argo_workflows_pods_gauge{namespace=\"{{ .Release.Namespace }}\"})",
          "legendFormat": "Total Pods",
          "interval": "5s",
          "maxDataPoints": 100
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "id": 4,
      "title": "Active vs Completed",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(argo_workflows_gauge{namespace=\"{{ .Release.Namespace }}\", status=~\"Running\"})",
          "legendFormat": "Active"
        },
        {
          "expr": "sum(argo_workflows_gauge{namespace=\"{{ .Release.Namespace }}\", status=~\"Succeeded|Failed|Error\"})",
          "legendFormat": "Completed"
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "blue", "value": 0}
            ]
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Active"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "mode": "fixed",
                    "fixedColor": "yellow"
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Completed"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "mode": "fixed",
                    "fixedColor": "green"
                  }
                }
              ]
            }
          ]
        }
      }
    },
    {
      "id": 5,
      "title": "Operation Duration",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(argo_workflows_operation_duration_seconds_bucket{namespace=\"{{ .Release.Namespace }}\"}[5m]))",
          "legendFormat": "95th percentile"
        },
        {
          "expr": "histogram_quantile(0.50, rate(argo_workflows_operation_duration_seconds_bucket{namespace=\"{{ .Release.Namespace }}\"}[5m]))",
          "legendFormat": "50th percentile"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 6,
      "title": "Kubernetes API Requests",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(argo_workflows_k8s_request_total{namespace=\"{{ .Release.Namespace }}\"}[5m])",
          "legendFormat": "{{`{{verb}} {{resource}}`}}"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "id": 7,
      "title": "Workflow Status Distribution",
      "type": "piechart",
      "targets": [
        {
          "expr": "argo_workflows_gauge{namespace=\"{{ .Release.Namespace }}\"}",
          "legendFormat": "{{`{{status}}`}}"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Succeeded"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "fixedColor": "green",
                  "mode": "fixed"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Failed"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "fixedColor": "red",
                  "mode": "fixed"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Running"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "fixedColor": "yellow",
                  "mode": "fixed"
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": 8,
      "title": "Controller Memory Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "{__name__=~\"argo_workflows_process\\\\.runtime\\\\.go\\\\.mem\\\\.heap_inuse\", namespace=\"{{ .Release.Namespace }}\"} / 1024 / 1024",
          "legendFormat": "Heap In Use (MB)"
        },
        {
          "expr": "{__name__=~\"argo_workflows_process\\\\.runtime\\\\.go\\\\.mem\\\\.heap_alloc\", namespace=\"{{ .Release.Namespace }}\"} / 1024 / 1024",
          "legendFormat": "Heap Allocated (MB)"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "fieldConfig": {
        "defaults": {
          "unit": "MB"
        }
      }
    }
  ],
  "folderId": null,
  "overwrite": true
}
